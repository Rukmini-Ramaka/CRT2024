#include <stdio.h>

int main() {
    int n;
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Print the pattern
    for (int i = 1; i <= n; i++) {
        // Print (2*i - 1) asterisks followed by a newline
        for (int j = 1; j <= 2*i - 1; j++) {
            printf("* ");
        }
        printf("\n");
    }

    return 0;
}
